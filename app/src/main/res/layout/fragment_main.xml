<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Announcement">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/announcementlogo"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Announcement"
                android:textColor="#575728"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp" />

            <TextView
                android:drawableStart="@drawable/ic_live_help_black_24dp"
                android:drawableLeft="@drawable/ic_live_help_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" License"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/information" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/AnnouncementList"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>