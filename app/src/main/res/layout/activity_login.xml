<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:orientation = "vertical"
            android:background = "@color/colorPrimary">
            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginTop ="20dp"
                android:src="@drawable/logo2">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity = "center"
                android:text = "Georgia Institute of Technology"
                android:textColor = "#575728"
                android:textSize = "18dp"
                android:textStyle = "bold"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity = "center"
                android:text = "Class Enrollment Helper"
                android:textColor = "#575728"
                android:textSize = "13dp"
                android:textStyle = "bold"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/idText"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="3dp"
                android:hint="username"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#737070" />

            <EditText
                android:id="@+id/pwText"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_https_black_24dp"
                android:drawablePadding="3dp"
                android:hint="password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#737070" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:text="Login"
                android:textColor="#575728"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:text="Register" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity = "center"
                android:paddingBottom = "10dp">
                <TextView
                    android:drawableStart = "@drawable/ic_live_help_black_24dp"
                    android:drawableLeft = "@drawable/ic_live_help_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = " About"
                    android:textSize= "15dp"
                    android:gravity = "center"
                    android:layout_gravity="bottom"
                    android:id = "@+id/information"/>
            </LinearLayout>
            </LinearLayout>

        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>