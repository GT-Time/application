<resources>

    <!--
       Note: Exact number for style doesn't mean anything.
       Following shows what needs to be edited in order to achieve style name specified.
       Feel free to change number.
    -->
    <!-- base set of styles that apply to all versions -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   a darker variant of the primary color, used for
           the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorGray</item>
        <!--   a secondary color for controls like checkboxes and text fields -->
    </style>

    <style name = "AppTheme.NoActionBar">
        <item name = "windowActionBar">false</item>
        <item name = "windowNoTitle">true</item>
    </style>

    <style name = "AppTheme.Pop">
        <item name = "android:windowIsTranslucent">true</item>
        <item name = "android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- components theme -->
    <style name = "Theme" parent="Theme.MaterialComponents.Light">

    </style>
    <style name = "Theme.Layout">
        <item name="android:background">@color/colorWeakWhite</item>
    </style>
    <style name = "Theme.BottomNavigation">
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorPrimary">@color/colorAliceBlue</item>
        <item name="colorOnPrimary">@color/colorWarning</item>
    </style>
    <style name = "Theme.ChoiceChip">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Choice</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>
    <style name = "Theme.ChipGroup">

    </style>
    <style name = "Theme.Button">
        <item name = "android:backgroundTint">@color/colorSubTheme</item>
    </style>
    <style name = "Theme.List">
        <item name = "android:background">@color/colorWhite</item>
        <item name = "android:dividerHeight">2dp</item>
        <item name = "android:divider">@color/colorWeakGray</item>
        <item name = "android:textColor">@color/colorWarning</item>
        <item name = "android:textSize">13dp</item>
    </style>

    <style name = "Theme.TextView">
        <item name = "android:layout_height"> wrap_content </item>
        <item name = "android:layout_width"> wrap_content</item>
    </style>

    <style name = "Theme.TextView.FixedSizeView">
        <item name = "android:minWidth"> 100dp </item>
        <item name = "android:maxWidth"> 100dp </item>
        <item name = "android:minHeight"> 20dp </item>
        <item name = "android:maxHeight"> 20dp </item>
    </style>


    <!-- font theme -->

</resources>
